<h1>Division</h1>

<form action="/wizard_divide" method="POST">
  <label for="form_first_number">
    Divide this:
  </label>
  <input id="form_first_number" name="first_number" type="text" required>

  <label for="form_second_number">
    by this:
  </label>
  <input id="form_second_number" name="second_number" type="text" required>

  <button type="submit">
    Divide!
  </button>
</form>
